<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/faculty_attendance_id"
    app:cardBackgroundColor="#19235A"
    android:layout_marginBottom="2.5dp"
    android:layout_marginTop="2.5dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/fragmentAttendance">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/faculty_0001"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2.5dp"
            android:layout_marginBottom="2.5dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/fullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:text="FullName"
                android:textColor="@color/colorDarkWhite"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/classTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subject"
                android:textColor="@color/colorDarkWhite"/>

            <TextView
                android:id="@+id/subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Subject Code"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/roomNumber"
                android:textColor="@color/colorDarkWhite"/>

            <TextView
                android:id="@+id/roomNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:text="Room Number"
                android:textColor="@color/colorDarkWhite"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fullName" />

            <Button
                android:id="@+id/present"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/checkingbutton"
                android:text="Present"
                android:textColor="@color/colorTimeBlue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/absent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Absent"
                android:textColor="@color/colorRed"
                app:layout_constraintEnd_toStartOf="@+id/present"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/checkingbutton"/>

            <TextView
                android:id="@+id/firstTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="7:30:35 AM"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/present"
                android:textColor="@color/colorDarkWhite"/>

            <TextView
                android:id="@+id/secondTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:text="8:20:49 AM"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/firstTime"
                android:textColor="@color/colorDarkWhite"/>

            <TextView
                android:id="@+id/notice_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/colorDarkWhite"
                app:layout_constraintStart_toEndOf="@+id/fullName"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/absent">

                <RadioButton
                    android:id="@+id/firstCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="First Check"
                    tools:layout_editor_absoluteX="187dp"
                    tools:layout_editor_absoluteY="56dp"
                    android:textColor="@color/colorDarkWhite"/>

                <RadioButton
                    android:id="@+id/secondCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="4dp"
                    android:text="Second Check"
                    tools:layout_editor_absoluteX="187dp"
                    tools:layout_editor_absoluteY="56dp"
                    android:textColor="@color/colorDarkWhite"/>


            </RadioGroup>
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>